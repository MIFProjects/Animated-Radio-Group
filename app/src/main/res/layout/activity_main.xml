            <!--android:textSize="17sp" />-->

            <!--<TextView-->
            <!--android:id="@+id/textView2"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/textView3"-->
            <!--android:layout_weight="1"-->
            <!--android:padding="5dp"-->
            <!--android:text="Size: "-->
            <!--android:textColor="#ffffff"-->
            <!--android:textSize="17sp" />-->

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/RelativeLayout3"
            android:padding="10dp">

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/AnimatedType"
                android:spinnerMode="dropdown" />

            <!--<Spinner-->
            <!--android:id="@+id/spinner3"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/spinner"-->
            <!--android:layout_weight="1"-->
            <!--android:entries="@array/LayoutSizeType"-->
            <!--android:spinnerMode="dropdown" />-->

            <!--<Spinner-->
            <!--android:id="@+id/spinner2"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@+id/spinner3"-->
            <!--android:layout_weight="1"-->
            <!--android:entries="@array/OrientationType"-->
            <!--android:spinnerMode="dropdown" />-->

        </RelativeLayout>

    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/tb_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:elevation="5dp"
        app:tabGravity="fill"
        app:tabIndicatorHeight="0dp"
        app:tabMaxWidth="0dp"
        app:tabMode="fixed" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_orientation"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />



    <com.mif.animatedradiogrpouplib.AnimatedRadioGroup
        android:id="@+id/animatedRG3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RelativeLayout3"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:visibility="visible"
        app:circleCenterFillRadius="13dp"
        app:circleFillColor="@color/colorPrimary"
        app:circleGravity="center"
        app:circlePaddingLeft="0dp"
        app:circlePaddingRight="0dp"
        app:circleRadius="17dp"
        app:circleStrokeColor="@color/colorPrimaryDark"
        app:circleStrokeWidth="3dp"
        app:separatorColor="@color/colorDivider"
        app:separatorStrokeWidth="40dp"
        app:setFullItemForClick="true"
        app:setSeparator="true">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/girl" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/girl" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/girl" />
        </RelativeLayout>


    </com.mif.animatedradiogrpouplib.AnimatedRadioGroup>


    <com.mif.animatedradiogrpouplib.AnimatedRadioGroup
        android:id="@+id/animatedRG4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/RelativeLayout3"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        app:circleCenterFillRadius="13dp"
        app:circleFillColor="@color/colorPrimary"
        app:circleGravity="center"
        app:circlePaddingLeft="15dp"
        app:circleRadius="17dp"
        app:circleStrokeColor="@color/colorPrimaryDark"
        app:circleStrokeWidth="3dp"
        app:separatorColor="@color/colorDivider"
        app:separatorStrokeWidth="15dp"
        app:setFullItemForClick="false"
        app:setSeparator="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/girl" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/girl" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/girl" />
        </RelativeLayout>


    </com.mif.animatedradiogrpouplib.AnimatedRadioGroup>


</LinearLayout>