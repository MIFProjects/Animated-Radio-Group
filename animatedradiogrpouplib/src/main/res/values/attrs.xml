<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AnimatedRadioGroup">
        <attr name="circleFillColor" format="color" />
        <attr name="circleStrokeColor" format="color" />
        <attr name="circleRadius" format="dimension" />
        <attr name="circleCenterFillRadius" format="dimension" />
        <attr name="circlePaddingTop" format="dimension" />
        <attr name="circlePaddingBottom" format="dimension" />
        <attr name="circlePaddingLeft" format="dimension" />
        <attr name="circlePaddingRight" format="dimension" />
        <attr name="circleStrokeWidth" format="dimension" />
        <attr name="circleGravity">
            <flag name="bottom" value="80" />
            <flag name="center" value="17" />
            <flag name="top" value="48" />
        </attr>
        <attr name="setSeparator" format="boolean" />
        <attr name="separatorColor" format="color" />
        <attr name="separatorStrokeWidth" format="dimension" />
        <attr name="setFullItemForClick" format="boolean" />
        <attr name="animationType">
            <flag name="bubble" value="1" />
            <flag name="jump" value="2" />
            <flag name="fade" value="3" />
            <flag name="gravity" value="4" />
            <flag name="yoyo" value="5" />
            <flag name="none" value="6" />
            <flag name="rail_line" value="7" />
            <flag name="draw_x" value="8" />
            <flag name="draw_v" value="9" />
        </attr>
    </declare-styleable>
</resources>